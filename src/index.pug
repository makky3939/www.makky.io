    .container
      .row.justify-content-center
        .col-sm-10
          h1 Portfolio
          hr

    .container
      .row.justify-content-center
        .col-sm-10
          .row
            each portfolio in contents["portfolios"]
              .col-sm-6.mb-3
                .card
                  .thumbnail-16x10(style='background-image: url(' + portfolio.thumbnails[0] + ')')
