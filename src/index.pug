  section.section.py-5
    .container
      .row.justify-content-center
        .col-sm-10
          h1 Photo
          hr

    .container
      .row.justify-content-center
        .col-sm-10
          .row
            each photo in contents["photos"][0]["albums"].slice(0, 6)
              .col-sm-4.mb-3
                .card
                  .thumbnail-1x1(style='background-image: url(' + photo.thumbnail + ')')
                
                  .card-footer
                    span.text-muted= `${contents["photos"][0]["year"]}/${photo.month}`

